{
  "info": {
    "name": "Cart Service",
    "description": "Shopping cart service (Redis-based)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3005",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get Cart",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"},
          {"key": "x-user-id", "value": "user-uuid"}
        ],
        "url": {
          "raw": "{{baseUrl}}/cart",
          "host": ["{{baseUrl}}"],
          "path": ["cart"]
        }
      }
    },
    {
      "name": "Add Item to Cart",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"},
          {"key": "x-user-id", "value": "user-uuid"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": \"product-uuid\",\n  \"quantity\": 2,\n  \"price\": 29.99,\n  \"name\": \"Product Name\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/cart/items",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "items"]
        }
      }
    },
    {
      "name": "Update Cart Item",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"},
          {"key": "x-user-id", "value": "user-uuid"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"quantity\": 3\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/cart/items/:itemId",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "items", ":itemId"],
          "variable": [{"key": "itemId", "value": "product-uuid"}]
        }
      }
    },
    {
      "name": "Remove Item from Cart",
      "request": {
        "method": "DELETE",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"},
          {"key": "x-user-id", "value": "user-uuid"}
        ],
        "url": {
          "raw": "{{baseUrl}}/cart/items/:itemId",
          "host": ["{{baseUrl}}"],
          "path": ["cart", "items", ":itemId"],
          "variable": [{"key": "itemId", "value": "product-uuid"}]
        }
      }
    },
    {
      "name": "Clear Cart",
      "request": {
        "method": "DELETE",
        "header": [
          {"key": "Authorization", "value": "Bearer {{token}}"},
          {"key": "x-user-id", "value": "user-uuid"}
        ],
        "url": {
          "raw": "{{baseUrl}}/cart",
          "host": ["{{baseUrl}}"],
          "path": ["cart"]
        }
      }
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
