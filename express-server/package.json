{
  "name": "home-delivery-system",
  "version": "1.0.0",
  "description": "Microservices-based home delivery system",
  "private": true,
  "workspaces": [
    "shared",
    "api-gateway",
    "auth-service",
    "user-service",
    "product-service",
    "inventory-service",
    "cart-service",
    "order-service",
    "payment-service",
    "delivery-service",
    "notification-service",
    "analytics-service"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "docker-compose up",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "logs": "docker-compose logs -f"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
